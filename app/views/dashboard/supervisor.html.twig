{% extends 'layout/base.html.twig' %}

{% block content %}
    <h1>Panel de Supervisor</h1>
    <p>Bienvenido, {{ user_name }}. A continuaci√≥n se listan los jefes a tu cargo.</p>

    <div class="container">
        <h2>Jefes a tu cargo</h2>
        <table>
            <thead>
                <tr>
                    <th>Apellido y Nombre del Jefe</th>
                    <th style="text-align: right;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% if jefes is not empty %}
                    {% for jefe in jefes %}
                        <tr>
                            <td>{{ jefe.age_apell1 }}, {{ jefe.age_nombre }}</td>
                            <td style="text-align: right;">
                                <a href="/dashboard_jefe?jefe_id={{ jefe.age_id }}" class="btn-view">
                                    <i class="fas fa-eye"></i> Ver Equipo
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="2">No tienes jefes asignados a tu cargo.</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>
{% endblock %}